<?xml version="1.0" encoding="UTF-8"?>
<local:ViewPostXaml xmlns="http://xamarin.com/schemas/2014/forms" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                    x:Class="ScheduloTestResolution.Views.ViewPost"
                    xmlns:local="clr-namespace:ScheduloTestResolution.Views"
                    Title="Post">
    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="20">
            <Label FontSize="16" Text="{Binding SelectedPost.Title}" />
            <Label FontSize="12" Text="{Binding SelectedPost.Body}" />
            <Label FontSize="12" Text="{Binding UserName}" />
        </StackLayout>
    </ContentPage.Content>
</local:ViewPostXaml>
