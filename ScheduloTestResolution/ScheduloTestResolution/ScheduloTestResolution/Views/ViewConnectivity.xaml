<?xml version="1.0" encoding="UTF-8"?>
<local:ViewConnectivityXaml xmlns="http://xamarin.com/schemas/2014/forms" 
                            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                            x:Class="ScheduloTestResolution.Views.ViewConnectivity"
                            xmlns:local="clr-namespace:ScheduloTestResolution.Views"
                            Title="Connectivity">
    <ContentPage.Content>
         <StackLayout VerticalOptions="Start" Orientation="Horizontal" Padding="10">
            <Label HorizontalOptions="FillAndExpand" 
                   FontSize="16" 
                   Text="Connection Status:" 
                   VerticalTextAlignment="Center" />
            
            <Label HorizontalOptions="End" 
                   FontSize="10" 
                   Text="{Binding ConnectionStatus}" 
                   VerticalTextAlignment="Center" />
        </StackLayout>
    </ContentPage.Content>
</local:ViewConnectivityXaml>
